{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "es2017",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "nodenext",
    "types": [
      "@webgpu/types"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}